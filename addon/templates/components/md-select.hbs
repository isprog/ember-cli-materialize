<label id="{{id}}" class="active">{{label}}</label>
<select onchange={{action (mut value) value="target.value"}}
        class="{{if validate 'validate'}} {{if errors 'invalid' 'valid'}}"
        disabled={{if disabled "true"}}>
  {{#if prompt}}
    <option value="" disabled selected>{{prompt}}</option>
  {{/if}}
  {{#each content as |option|}}
    <option value={{to-string (if (eq optionValuePath 'content') option (get option (md-regex-replace (or optionValuePath 'content.value') '(content\.|^content$)' '')))}} selected={{if (eq value (if (eq optionValuePath 'content') option (get option (md-regex-replace (or optionValuePath 'content.value') '(content\.|^content$)' '')))) "true"}}>{{if (eq optionLabelPath 'content') option (get option (md-regex-replace (or optionLabelPath 'content.label') '(content\.|^content$)' ''))}}</option>
{{/each}}
</select>

<small class="red-text">
  {{#if errors}}
    {{errors.firstObject}}
  {{else}}
    &nbsp;
  {{/if}}
</small>